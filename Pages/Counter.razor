@code {
    private List<int> numbers = new List<int>();

    protected override void OnInitialized()
    {
        GenerateNumbers(0, 100);
    }

    private void GenerateNumbers(int current, int max)
    {
        if (current <= max)
        {
            numbers.Add(current);
            GenerateNumbers(current + 3, max);
        }
    }
}
